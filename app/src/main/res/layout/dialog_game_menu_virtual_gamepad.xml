                <SeekBar
                    android:max="180"
                    android:min="20"
                    android:splitTrack="false"
                    android:progress="100"
                    android:id="@+id/sb_gamepad_scale_factor"
                    android:thumb="@android:color/transparent"
                    android:progressDrawable="@drawable/ic_game_menu_seek_bg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="4dp"
                    android:text="缩放：100%"
                    android:textColor="@android:color/white"
                    android:id="@+id/tx_gamepad_scale_factor"
                    android:textStyle="italic"
                    android:textSize="10dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="控件默认模式颜色(手柄与按键通用)"
                android:textColor="@android:color/white"
                android:textSize="10dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginTop="4dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/rg_game_virtual_key_color"
                android:orientation="horizontal">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_game_menu_btn_selector"
                    android:gravity="center"
                    android:padding="4dp"
                    android:id="@+id/btn_game_virtual_key_color_1"
                    android:button="@null"
                    android:text="黑色"
                    android:textSize="10dp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_game_menu_btn_selector"
                    android:gravity="center"
                    android:padding="4dp"
                    android:id="@+id/btn_game_virtual_key_color_2"
                    android:button="@null"
                    android:text="白色"
                    android:textSize="10dp" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/ic_game_menu_btn_selector"
                    android:gravity="center"
                    android:padding="4dp"
                    android:id="@+id/btn_game_virtual_key_color_3"
                    android:button="@null"
                    android:text="灰色"
                    android:textSize="10dp" />

            </RadioGroup>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
