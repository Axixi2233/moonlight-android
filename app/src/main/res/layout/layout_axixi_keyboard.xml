<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="#212121"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioGroup
            android:layout_width="150dp"
            android:layout_height="27dp"
            android:id="@+id/rg_keyboard"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_game_menu_btn_selector"
                android:gravity="center"
                android:padding="4dp"
                android:button="@null"
                android:id="@+id/rbt_keyboard_1"
                android:text="电脑全键盘"
                android:textSize="10dp" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="@drawable/ic_game_menu_btn_selector"
                android:gravity="center"
                android:padding="4dp"
                android:button="@null"
                android:id="@+id/rbt_keyboard_2"
                android:text="数字键盘"
                android:textSize="10dp" />

        </RadioGroup>
        <CheckBox
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_toRightOf="@+id/rg_keyboard"
            android:background="@drawable/ic_game_menu_btn_selector"
            android:gravity="center"
            android:padding="4dp"
            android:layout_marginRight="5dp"
            android:button="@null"
            android:id="@+id/btn_combination"
            android:text="组合键模式"
            android:textSize="10dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="27dp"
            android:layout_toRightOf="@+id/btn_combination"
            android:background="@drawable/ic_game_menu_btn_selector"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:padding="4dp"
            android:id="@+id/btn_soft_phone"
            android:text="手机软键盘"
            android:textColor="@android:color/white"
            android:textSize="10dp" />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_down"
            android:textColor="@android:color/white"
            android:src="@drawable/ic_axi_menu"
            android:layout_marginRight="2dp"
            android:id="@+id/iv_game_menu"
            android:padding="6dp"
            android:layout_width="27dp"
            android:layout_height="27dp"/>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@android:color/white"
            android:src="@drawable/ic_axi_down"
            android:id="@+id/iv_down"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="27dp"/>

    </RelativeLayout>


    <include
        android:id="@+id/lv_keyboard"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        layout="@layout/item_layout_axixi_keyboard"/>


    <include
        android:id="@+id/lv_keyboard_digitpad"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        layout="@layout/item_layout_axixi_keyboard_digitpad"/>

</LinearLayout>